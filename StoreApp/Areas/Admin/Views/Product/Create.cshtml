@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

 <form method="post" asp-action="Create" enctype="multipart/form-data"> @* formun dosya tipinde(resim ekliyoruz) işleme yapabilmesi için  *@

    <div class="text-danger" asp-validation-summary="All"></div> @*inputların boş geçilmemesi için tanımlandı *@

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId" >
            @* @foreach (Category cat in ViewBag.Categories)
            {
                <option value="@cat.CategoryId">@cat.CategoryName</option>
            } *@
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Save</button>
            <a class="btn btn-outline-danger" asp-action="Index"><i class="fa fa-list"></i> Products</a>
        </div>
        
    </div>
</form>