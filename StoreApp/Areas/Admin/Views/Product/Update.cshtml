@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div> @*inputların boş geçilmemesi için tanımlandı*@
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
            @* @foreach (Category cat in ViewBag.Categories)
            {
            <option value="@cat.CategoryId">@cat.CategoryName</option>
            } *@
        </select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-check form-switch">
        <label asp-for="ShowCase" class="form-check-label" for="flexSwitchCheckDefault"></label>
        <input asp-for="ShowCase" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
    </div>

    <div class="form-group my-3">
        <img width="150" class="rounded shadow" src="@Model?.ImageUrl">
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Update</button>
            <a class="btn btn-outline-danger" asp-action="Index"><i class="fa fa-list"></i> Products</a>
        </div>

    </div>
</form>